@import "/pages/common/index.wxss";
.index{
  width: 100%;
  height: 100%;
}
.hot-box{
  width: 100%;
  height: auto;
  background: #ffffff;
  display: flex;
  flex-wrap:wrap;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.hot{
  width: 20%;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;

}
.hot-img{
  width: 70rpx;
  height: 70rpx;
}
.letter{
  width: 100%;
  height: 40rpx;
  background: #F2F2F2;
  font-size:22rpx;
  color: rgba(0,0,0,0.6); 
  padding: 0 0 0 20rpx;
  box-sizing: border-box;
  line-height: 40rpx;
}
.vehicle-box{
  width: 100%;
  height: 110rpx;
  background: #ffffff;
  padding: 0 0 0 20rpx;
  box-sizing: border-box;
}
.vehicle{
  width: 100%;
  height: 108rpx;
  border-bottom:1rpx solid #F0ECEC; 
  display: flex;
  align-items: center;
}
.img{
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.vehicle-text{
  margin-left:20rpx;
  font-size: 30rpx;
  color: #000000;
  font-weight: 600; 
}
.right-box{
  position: fixed;
  top:50%;
  right: 10rpx;
  margin-top:-64%; 
  width: 22rpx;
  height: 952rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 22rpx;
  color: #E84A2E;
}
