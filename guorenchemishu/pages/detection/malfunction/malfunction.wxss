.index{
  width: 100%;
  height: auto;
  padding: 20rpx;
  box-sizing: border-box;
}
.title-box{
  width: 100%;
  height: 120rpx;
  border: 1rpx solid #000000;
  border-bottom:hidden; 
  display: flex;
  justify-content: center;
  align-items: center;
}
.title{
  font-size: 34rpx;
  color: #000000;
  font-weight: 700;
  margin-left: 50rpx;
}
.box{
  width: 100%;
  min-height: 90rpx;
  max-height: auto;
  border: 1rpx solid #000000;
  border-bottom:hidden; 
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: 600;
}
.box:last-child{
  border-bottom: 1rpx solid #000000;
}
.box-left{
  width: 25%;
  min-height:90rpx;
  max-height: auto;
  border-right:1rpx solid #000000; 
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap:wrap;
  align-items: center;
}
.box-right{
  width: 75%;
  min-height: 90rpx;
  max-height: auto;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap:wrap;
  align-items: center;
}