@import'/pages/users/login/login.wxss';
.index{
  position: absolute;
  width: 100%;
  height: 100%;
  padding: 100rpx 0;
  box-sizing: border-box;
}
.box-referrer{
  padding: 35rpx 20rpx;
  color: #929292;
  font-size: 24rpx;
}
 .commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
.commodity_attr_box {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 720rpx;
  z-index: 2000;
  overflow: hidden;
  /* background: #ffffff; */
  padding-bottom: 100rpx;
}
.referrer-index{
  /* position: absolute; */
  width: 70%;
  height: 355rpx;
  top:0;
  margin: 0 auto;
  background: #ffffff;
  border-radius: 20rpx;
  padding-top: 20rpx;
}
.head{
  width: 120rpx;
  height: 120rpx;
  background-color: #e31436;
  border-radius: 50%;
  margin: 0 auto;
}
.head-box{
  width: 65%;
  font-size: 36rpx;
  color: #131313;
  text-align: center;
  margin: 10rpx auto;
}
.btn{
  width: 100%;
  height: 90rpx;
  display: flex;
  padding: 26rpx 0 0 0;
  /* bottom: 0;
  left: 0; */
