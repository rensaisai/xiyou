.index{
  width: 100%;
  height: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.box{
  width: 100%;
  height: 60rpx;
  font-size: 28rpx;
  color: #737272;
  line-height: 60rpx;
  display: flex;
  flex-direction: row-reverse;
  box-sizing: border-box;
}
.select{
 width: 100%;
 height: 50rpx;
 font-size: 26rpx;
 color: #898989;
 text-align: center;
 line-height: 70rpx;
}
.index-box{
  width: 100%;
  height: auto;
  overflow: hidden;
}
.content{
  position: relative;
  width: 100%;
  height: 144rpx;
  /* overflow: hidden; */
  margin-top: 20rpx;
}
.list{
  position: relative;
  width: 100%;
  height: 100%;
  left: 0;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-radius:10rpx;
  background: #ffffff;
  display: flex;
  justify-content: space-between; 
  transition: all 0.3s;
}
.delter{
  position: absolute;
  top:0;
  right: -150rpx;
  width: 150rpx;
  height: 144rpx;
  background: #e51338;
  font-size:28rpx; 
  color: #ffffff;
  text-align: center;
  line-height: 144rpx;
  border-radius:0rpx 10rpx 10rpx 0;
  transition: all 0.3s;
}
.content.active {
 left: -155rpx;
}
.list-left{
  display: flex;
  align-items: center;
  height: 144rpx;
}
.text{
  margin-left:20rpx; 
  font-size: 30rpx;
  color: #2c2c2c;
}
.icon1{
  width: 41rpx;
  height: 41rpx;
  background: url(data:image/png;base64,) no-repeat center center/cover;
}
.icon2{
   width: 41rpx;
  height: 41rpx;
  background: url(data:image/png;base64,) no-repeat center center/cover;
  }
.img{
  width: 32rpx;
  height: 33rpx;
  background: url(data:image/png;base64,) no-repeat center center/cover;
}
.btn{
  position: fixed;
  bottom: 10rpx;
  left: 20rpx;
  width: 95%;
  height: 90rpx;
  background: #e51338;
  border-radius:10rpx;
  color: #ffffff;
  font-size:30rpx;
  line-height: 90rpx;
  text-align: center;
}