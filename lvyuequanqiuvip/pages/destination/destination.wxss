@import '/pages/index/index.wxss';
@import "/pages/common/index.wxss";
.hot{
  width: 100%;
  height: auto;
  background: #ffffff;
  /* margin-top:20rpx;  */
}
.spot-box{
  height: auto;
  flex-wrap:wrap;
  padding: 5rpx 0;
}
.spot-left{
  width: 100%;
  height: auto;
}
.bourn{
  height: 62rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center; 
}
.hot-icon{
  width: 24rpx;
  height: 24rpx;
  background: darkkhaki;
  background: url(data:image/png;base64,) no-repeat center center/cover;
}
.hot-text{
  font-size: 26rpx;
  padding-left:5rpx; 
  font-weight: 700;
  line-height: 62rpx;
}
.site{
  width: 100%;
  height: auto;
  overflow: hidden;
}
.site-box{
  width: 164rpx;
  height: 60rpx;
  background-color: #EEEEEE;
  border-radius:8rpx; 
  text-align: center;
  line-height: 60rpx;
  color: #5E6265;
  float: left;
  margin-left:20rpx;
  margin-bottom:20rpx;  
  font-size: 24rpx;
  overflow: hidden;
  padding: 0 5rpx;
  box-sizing: border-box;
}
.host{
  color: #ffffff;
  background-color: #e41436;
}
.list{
  height: auto;
  padding: 0 20rpx 20rpx;
  box-sizing: border-box; 
}
.list:nth-child(1){
  margin-top:0rpx; 
}
.hint{
  top:20rpx;
}
.host-price{
  height: 50rpx;
  line-height: 50rpx;
}
.cut{
padding-left:5rpx; 
}