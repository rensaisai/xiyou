.index{
background-color: #f8f8f8;
}
.box{
  display: flex;
  justify-content: space-between;
  padding: 10px 5px;
}

.select_box{
  position: relative;
  background: #fff;
  width: 100%;
  /* margin: 30rpx auto; */
  /* position: relative; */
}
.img{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: 8px;
  /* left: 80px; */
  right: 1px;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  border:1px solid #d0d0d0;
  border-radius: 5px;
  /* display: flex;
  align-items: center; */
  padding: 0 10rpx;
}
.select_text{
  font-size: 30rpx;
  flex: 1;
  color: rgb(126, 126, 126);
}
.select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  /* top: 70rpx; */
  width: 100px;
  /* border:1px solid #efefef; */
  box-sizing: border-box;
  height: auto;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  /* padding: 0 0 30rpx; */
  z-index: 999;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  /* border-bottom: 1px solid #efefef; */
  padding: 10rpx;
  width: 100%;
}


.search{width: 200px; margin-left: 5px;}
.search_arr {  border: 1px solid #d0d0d0;  border-radius: 10rpx;background-color: #ffffff;}
.search_arr input{height: 60rpx;  border-radius: 5px; color: rgb(126, 126, 126); padding-left: 20rpx;}
.bc_text {  line-height: 60rpx;  height: 60rpx;  margin-top: 30rpx;} 
.sousuo {width:35px; border: 1px solid #d0d0d0;  border-radius: 10rpx; color:rgb(126, 126, 126);background-color: #ffffff; height: 62rpx; font-size: 26rpx;line-height: 62rpx; text-align: center; margin-left: 5px;}
.gro_index{display: flex; flex: 1;}
.searchcion {  margin: 10rpx 10rpx 10rpx 10rpx;  position: absolute;  left:25rpx;  z-index: 2;  width: 20px;  height: 20px;  text-align: center;}
.tab{float: left; width: 20%;text-align: center;padding: 10rpx 0; }
.topTabSwiper{ border-bottom: 1px solid #ccc; zoom: 1; background-color:#ffffff;}
.topTabSwiper:after{content: ""; clear: both;display: block;}
.tabBorer{border-bottom: 1px solid #f39400; color: #f39400;}
.swiper{width: 100%; height: auto;}
.swiper_con{text-align: center; width: 100%; height:auto; padding: 0 0;}
.swiper_con .index-box{
  width: 100%;
  height: auto;
  background-color: #ffffff;
  margin-top: 20rpx;
}
.swiper_con .index-box:nth-child(1){
   margin-top: 0;
}
.index-box .item-index{
  display: flex;
  padding: 5rpx 20rpx;
  font-size: 14px;
}
 .item-index .text{
   color: rgb(126, 126, 126);
 }


