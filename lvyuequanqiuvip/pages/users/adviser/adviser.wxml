          <input name="phone" type='number' class="weui-input"  placeholder="请输入手机号"/>
        </view>
      </view>
  </view>
  <button type="primary" class="button-big login" style="background-color:#1296db"form-type='submit' hidden='{{hasRefere}}'>确认</button>
