@import "/pages/index/index.wxss";
.search-box{
  position: fixed;
  top: 0;
  width: 100%;
  height: 90rpx;
  background: #ffffff;
  display: flex;
  padding: 0 20rpx;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-between;
}
.searchs{
  width: 80%;
  height: 60rpx;
  background: #E7E7E7;
  border-radius:30rpx; 
  padding-left:20rpx;
  box-sizing: border-box; 
  font-size: 26rpx;
}
.search-btn{
  font-size: 30rpx;
  color: #000000;
  font-weight: 600;
}
.clear{
  width: 100%;
  height: 90rpx;
  overflow: hidden;
}