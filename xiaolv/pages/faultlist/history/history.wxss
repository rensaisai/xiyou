page{
  background: #ffffff;
}
.index{
  width: 100%;
  height: auto;
}
.tab-box{
  position: fixed;
  top:0;
  z-index: 9999;
  width: 100%;
  height: 100rpx;
  border-bottom:1rpx solid #E8E8E8; 
}
.block{
  width: 100%;
  height: 100rpx;
}
.tab{
  display: inline-block;
  width: 50%;
  height: 98rpx;
  line-height: 98rpx;
  border-bottom:2rpx solid #ffffff;
  font-size: 30rpx;
  color: #666666; 
  text-align: center;
}
.tab-selecrt{
  border-bottom: 2rpx solid #E84A2E; 
  color: #E84A2E;
}
.list-box{
  width: 100%;
  height: 110rpx;
  border-bottom: 1rpx solid #E8E8E8;
  display: flex;
  align-items: center;
  justify-content: space-between; 
  padding: 0 20rpx;
  box-sizing: border-box;
}
.list-time{
  font-size: 30rpx;
}
.vehicle-tablet{
  width: auto;
  height: 50rpx;
  background:rgba(49,117,229,0.1);
  border-radius:10rpx;
  font-size: 26rpx;
  color: #3175E5;
  line-height: 50rpx;
  padding: 0 20rpx;
}
.malfunction{
  width: 165rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}
.num{
  font-size: 40rpx;
  color: #E84A2E;
}