}
.camerabotton-view3{
  position: absolute;
  background: rgba(0,0,0,0.5);
}
.camerabotton-view4{
  position: absolute;
  width: 8px;
  background: rgba(0,0,0,0.5);
}
.camerabotton-view5{
  position: absolute;
  width: 8px;
  background: rgba(0,0,0,0.5);
  right: 0;
}
.camerabotton-view6{
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  background: rgba(0,0,0,0.5);
  padding-top: 100px;
  box-sizing: border-box;
}
.camerabotton-view7{
  width: 60px;
  height: 60px;
  border-radius:30px;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center; 
  z-index: 99999;
}
.camerabotton-view8{
  width: 50px;
  height: 50px;
  border-radius:50%; 
  border: 1px solid #000000;
  display: flex;
  align-items: center;
  justify-content: center; 
}
.camerabotton-view9{
  width: 30px;
  height: 30px;
}
.cameracenter-view{
  height: 44rpx;
  width: 100%;
  position: absolute;
 
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
}
 
