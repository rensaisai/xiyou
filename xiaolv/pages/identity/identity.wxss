.camerabgImage-view{
  height: 100%;
  width: 100%;
  position:absolute;
}
.bgImage{
  border:2px solid #ffffff; 
  position: absolute;
}
.cameratop-view1{
  width: 100%;
  background: rgba(0,0,0,0.5);
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cameratop-view2{
  position: fixed;
  width: 76%;
  height: auto;
  white-space: pre-wrap;
  font-size: 18px;
  color: #ffffff; 
  /* transform:rotate(90deg); */
