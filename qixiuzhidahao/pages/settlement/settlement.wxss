.index{
  width: 100%;
  height: auto;
  padding:0 20rpx;
  box-sizing: border-box;
}
.today-bill{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1rpx solid #E9E9E9;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #000000;
  font-weight: 600;
  margin-top:20rpx; 
}
.today-img{
  width: 60rpx;
  height: 60rpx;
}
.boxs{
  height: 88rpx;
  border: 1rpx solid #E9E9E9;
  margin-top:20rpx; 
  overflow: hidden;
}
.box{
  width: 100%;
  height: auto;
  border: 1rpx solid #E9E9E9;
  margin-top:20rpx; 
}
.bill{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #000000;
  font-weight: 600;
  border: 1rpx solid #E9E9E9;
}
.evaluation{
  width: 100%;
  display: flex;
}
.list{
  width: 24%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #000000;
}
.score{
  width: 28%;
}
.settlement{
  width: 100%;
  height: 150rpx;
  margin-top: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
}
.tody{
  position: relative;
}
.ball-box{
  position: absolute;
  right: 20rpx;
  top: 98rpx;
  width:200rpx;
  height:120rpx;
  background:#ffffff;
}
.prompt{
  width: 200rpx;
  height: 120rpx;
  border: 1rpx solid #E9E9E9;
  border-radius:5rpx; 
  position: relative;
  z-index: 999;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 20rpx;
  padding-left:20rpx;
  box-sizing: border-box 
}
.triangle{
  position: absolute;
  bottom:-8rpx;
  right: 36rpx;
  width: 18rpx;
  height: 18rpx;
  border-bottom: 1rpx solid #E9E9E9;
  border-right: 1rpx solid #E9E9E9;
  transform:rotate(45deg);
  background: #ffffff;
  z-index: 9999;
}