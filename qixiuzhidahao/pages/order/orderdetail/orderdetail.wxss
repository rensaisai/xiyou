.index{
  width: 100%;
  height: auto;
  background: #ffffff;
}
.vh-box{
  margin: 0 auto;
  width: 95%;
  height: auto;
  background: #ffffff;
  border-bottom:1rpx solid #E9E9E9; 
  padding-bottom:20rpx;
  box-sizing: border-box; 
}
.title{
  font-size: 28rpx;
  color: #000000;
  font-weight: 600;
  line-height: 80rpx;
}
.box{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: space-between;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.order-box{
  width: 100%;
  height: auto;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.left{
  width: 70%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size:26rpx;
  color: #000000;
  font-weight: 600; 
}
.right{
  width: 25%;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.amend-btn{
  width: 150rpx;
  height: 60rpx;
  border: 1rpx solid #1296db;
  font-size: 24rpx;
  color: #1296db;
  font-weight: 600;
  text-align: center;
  line-height: 60rpx;
  border-radius:5rpx; 
}
.project{
  font-size: 26rpx;
  color: #000000;
  font-weight: 600;
  line-height: 50rpx;
}
.project-box{
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
}
.order{
  width: 50%;
  height: 160rpx;
  margin-top: 20rpx;
  display: flex;
}
.order:nth-child(1){
  margin-top: 0rpx;
}
.order:nth-child(2){
  margin-top: 0rpx;
}
.goods-ing{
  width: 85rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
}
.img{
  width: 85rpx;
  height: 85rpx;
}
.goods-detail{
  flex-grow: 1;
  width: 100%;
  height: 160rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-name{
  font-size: 19rpx;
  color: #000000;
  font-weight: 600;
  line-height: 24rpx;
}
.goods-standard-box{
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-wrap: wrap;
}
.goods-standard{
  width: auto;
  height: 24rpx;
  border: 1rpx solid #1296db;
  font-size: 20rpx;
  color: #1296db;
  border-radius:5rpx;
  line-height: 22rpx;
  padding: 0 5rpx;
  box-sizing: border-box;
  margin-right: 5rpx;
}
.num{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction:row-reverse;
  font-size:20rpx;
  color: #000000;
  font-weight: 600;  
}
.kilometre-box{
  width: 100%;
  height:80rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #000000;
}
.kilometre-input{
  width: 80%;
  height: 80rpx;
  border:1rpx solid #F2F2F2;
  border-radius:5rpx;
  margin-left: 30rpx;
  box-sizing: border-box;  
  padding:0 0 0 20rpx;
  display: flex;
}
.vin-box{
  width: 82%;
  height: 80rpx;
}
.sweep{
  width: 18%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.sweep-img{
  width: 50%;
  height: 50%;
}
.uploading-box{
  width: 100%;
  height: auto;
  display: flex;
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #000000;
  align-items: center;
}
.uploading{
  width: 120rpx;
  height: 120rpx;
  border:1rpx dashed #E9E9E9;
  margin-left: 30rpx;
  text-align: center;
  line-height: 120rpx;
  color: #000000;
  font-weight: 600;
  font-size: 60rpx;
}
.big-box{
  width: 100%;
  height: auto;
}
.technician-box{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #000000;
  font-weight: 600;
}
.select-box{
  position: relative;
  width: 56%;
  height: 80rpx;
  margin-left: 20rpx;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  border:1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.select_text{
  font-size: 30rpx;
  flex: 1;
}
.select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  top: 80rpx;
  width: 100%;
  border:0 1px 1px 1px 1px solid #efefef;
  box-sizing: border-box;
  overflow: hidden;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  z-index: 999;
}
.option{
  display: block;
  line-height: 70rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
  box-sizing: border-box;
}
.signature-man{
  width: 100%;
  height: auto;
  padding: 0 10rpx 20rpx;
  box-sizing: border-box;
}
.signature{
  width: 100%;
  height: auto;
}
.signature-box{
  width: 100%;
  height: 400rpx;
  margin-top: 20rpx;
  border: 1rpx dashed #99A4B1; 
}
.apply{
  height: 100rpx;
  background: #eaeff3;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.delbutton{
  width: 110rpx;
  height: 60rpx;
  background-color: #1296db;
  font-size: 26rpx;
  color: #ffffff;
  font-weight: 700;
  text-align: center;
  line-height: 60rpx;
  border-radius:5rpx; 
}
.canvas{
  width: 100%;
  height: 300rpx;
}
.submit{
  width: 95%;
  margin-top:60rpx; 
  background: #1296db;
  color: #ffffff;
}