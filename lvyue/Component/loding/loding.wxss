.loding{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
}
.loging-icon{
  width: 50rpx;
  height: 50rpx;
  background: #ea294b;
  border-radius:25rpx; 
  animation: ani-demo-spin 1s linear;
  animation-iteration-count: infinite;
}
.text{
  font-size: 24rpx;
  color: #888888;
}
@keyframes ani-demo-spin {
    0% {
        transform: scale(0);
        opacity: 0.0;
    }
    25% {
        transform: scale(0.2);
        opacity: 0.1;
    }
    50% {
        transform: scale(0.4);
        opacity: 0.3;
    }
    75% {
        transform: scale(0.6);
        opacity: 0.8;
    }
    100% {
        transform: scale(1);
        opacity: 0.0;
    }
}
