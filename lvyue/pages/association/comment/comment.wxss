.index{
  width: 100%;
  height: auto;
  background: #ffffff;
}
.indexm{
  width: 100%;
  height: auto;
  background: #f1f1f3;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.box{
  width: 100%;
  height: auto;
  display: flex;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: relative;
  padding-bottom: 50rpx;
}
.img-box{
  width: 11%;
  height: auto;
}
.user-img{
  width: 64rpx;
  height: 64rpx;
  border-radius:50%; 
}
.com-content-box{
  width: 89%;
  height: auto; 
}
.comment-name{
  width: 60%;
  height: 64rpx;
  font-size: 28rpx;
  color: #999999;
  line-height: 64rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.comment-box{
  font-size: 30rpx;
  color: #000000;
  font-weight: 600;
  line-height: 46rpx;
  word-wrap:break-word;
}
.reply-box{
  width: 100%;
  height: auto;
  border-left:5rpx solid #EBEBEB;
  font-size: 30rpx;
  color: #9B9A9A;
  line-height: 55rpx; 
}
.reply-name{
  width: 60%;
  padding-left: 20rpx;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  line-height: 64rpx;
}
.reply-comment{
  padding-left: 20rpx;
  box-sizing: border-box;
  line-height: 46rpx;
  word-wrap:break-word;
}
.praise-box{
  min-width: 150rpx;
  max-width: auto;
  height: 64rpx;
  position: absolute;
  right: 20rpx;
  top: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.left{
  min-width: 75rpx;
  max-width: auto;
  height: 64rpx;
  display: flex;
  align-items: center;
}
.right{
  width: 75rpx;
  height: 64rpx;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
 
}
.praise{
  width: 29rpx;
  height: 29rpx;
  animation-name: scaleDraw; /*关键帧名称*/
  animation-timing-function: ease-in-out; /*动画的速度曲线*/
  animation-iteration-count: infinite;  /*动画播放的次数*/
  animation-duration: 3s; /*动画所花费的时间*/
}
.num{
  font-size: 28rpx;
  padding-left: 10rpx;
  color: #7C7C7C;
  line-height: 64rpx;
}
.issue-time{
  width: 100%;
  height: 80rpx;
  font-size: 26rpx;
  color: #9B9A9A;
  line-height: 80rpx;
}
.comment-btn{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  background: #ffffff;
  border-top:1rpx solid #EFF0F1; 
  padding: 20rpx;
  box-sizing: border-box;
}
.clear{
  width: 100%;
  height: 120rpx;
  background: #f1f1f3;
}
.comment-input{
  width: 100%;
  height: 100%;
  background: #F0F1F2;
  font-size: 32rpx;
  padding:0 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  color:#999999;
}
.return-box{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 200rpx;
  background: #ffffff;
  z-index: 9999999;
  display: none;
}
.return{
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 200rpx;
  background: #ffffff;
  z-index: 9999999;
  display: block;
  padding: 20rpx;
  box-sizing: border-box;
}
.textarea{
  width: 100%;
  height: 100%;
  background: #F0F1F2;
  padding:10rpx;
  box-sizing: border-box; 
}
@keyframes scaleDraw {  /*定义关键帧、scaleDrew是需要绑定到选择器的关键帧名称*/
            0%{
                transform: scale(1);  /*开始为原始大小*/
            }
            25%{
                transform: scale(1.2); /*放大1.1倍*/
            }
            50%{
                transform: scale(1);
            }
            75%{
                transform: scale(1.2);
            }
        }