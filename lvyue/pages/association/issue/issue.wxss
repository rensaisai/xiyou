.index{
  width: 100%;
  height: auto;
}
.img-box{
  width: 100%;
  height: auto;
  padding: 20rpx;
  box-sizing: border-box;
  display: inline-block;
  background: hsl(0, 0%, 100%);
}
.issue-img{
  width: 120rpx;
  height: 120rpx;
  border-radius:5rpx; 
}
.input-box{
  width: 100%;
  height: 90rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-bottom:1rpx solid #E8E8E8; 
  display: flex;
  background: #ffffff;
}
.title{
  width: 90%;
  height: 90rpx;
  font-size: 32rpx;
}
.title-num{
  width: 10%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #949494;
}
.text-box{
  width: 100%;
  min-height: 380rpx;
  max-height: auto;
  padding: 20rpx;
  box-sizing: border-box;
  background: #ffffff;
}
.text{
  width: 100%;
  min-height: 380rpx;
  max-height: auto;
  font-size: 30rpx;
}
.add-goods-box{
  width: 100%;
  height: 138rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.add-goods{
  width: 100%;
  height: 138rpx;
}
.goods-box{
  width: 100%;
  height: 180rpx;
  display: flex;
}
.goods-img{
  width: 180rpx;
  height: 180rpx;
}
.goods-left{
  height: auto;
  font-size: 28rpx;
  flex-wrap:wrap;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-tap{
  font-size: 30rpx;
  color: #ED052B;
}
.goods-right{
  flex: 1;
  height: 180rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction:column;
  justify-content: space-between; 
}
.issue{
  position: fixed;
  bottom: 20rpx;
  left: 5%;
  width: 90%;
  height: 90rpx;
  background: #ea294b;
  color: #ffffff;
}
.issue-img-boxs{
  width: 120rpx;
  height: 200rpx;
  display: inline-block;
  margin-right: 20rpx;
}
.detile{
  width: 120rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #949494;
}
.clear{
  width: 100%;
  height: 110rpx;
}
.relevance-goods-box{
  width: 100%;
  height: 256rpx;
  background: #ffffff;
  margin-top: 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.shut-box{
  width: 100%;
  height: 50rpx;
  display: flex;
  align-items: center;
  flex-direction:row-reverse;
}
.shut-btn{
  width: 30rpx;
  height: 30rpx;  
}