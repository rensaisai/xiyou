.box{
  width: 100%;
  height: 440rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.success{
  width: 140rpx;
  height: 188rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.icon{
  width: 120rpx;
  height: 120rpx;
}
.signed{
  font-size:30rpx;
  color: #2F2F2F; 
}
.text-btn{
  width: 95%;
  height: 90rpx;
  border-radius:10rpx;
  border: 1rpx solid #E51337;
  text-align: center;
  line-height: 90rpx;
  font-size: 30rpx;
  color:#E51337;
  margin: 20rpx auto 0;  
}
.text-btn:nth-child(1){
  margin-top: 0;
}
.hot{
  background: #E51337;
  color: #ffffff;
}