.prompt{
  width: 100%;
  height: 66rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #E51337;
  line-height: 66rpx;
}
.list{
  width: 100%;
  height: 99rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  background: #ffffff;
  margin-top: 2rpx;
}
.list:nth-child(1){
  margin-top: 0;
}
.text{
  width: 20%;
  font-size: 30rpx;
  color: #1D1D1D;
  line-height: 99rpx;
}
.input-text{
  flex: 1;
  height: 99rpx;
  padding-left: 60rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}
.holder{
  color: #5A5A5A;
}
.agreement-box{
  width: 100%;
  height: 110rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.box{
  width: 30rpx;
  height: 30rpx;
  border: 1rpx solid #E51337;
  border-radius:8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.agreement{
  font-size: 28rpx;
  color: #585b5d;
  margin-left: 20rpx;
}
.text-btn{
  width: 95%;
  height: 88rpx;
  border-radius:10rpx;
  border: 1rpx solid #E51337; 
  margin: 0 auto;
  text-align: center;
  line-height: 88rpx;
  color: #E51337;
}
.btn-box{
  width: 95%;
  height: 90rpx;
  margin: 20rpx auto 0;
  display: flex;
  justify-content: space-between;
}
.refused{
  width: 45%;
  height: 88rpx;
  border:1rpx solid #E51337;
  border-radius:10rpx;
  text-align: center;
  line-height: 88rpx;  
  color: #E51337;
}
.bott{
  width: 45%;
  height: 88rpx;
  border: 1rpx solid #E51337;
  border-radius:10rpx; 
  color:#E51337;
  line-height: 88rpx; 
}
.hot{
  background: #E51337;
  color: #Ffffff;
}
button{
  margin: 0;
}
.for-icon{
  width: 16rpx;
  height: 12rpx;
  background: red;
  background: url(data:image/png;base64,) no-repeat 100% 100%/100%;
}