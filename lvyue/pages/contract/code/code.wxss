.index{
  width: 100%;
  height: 100%;
  padding: 50rpx 0 0;
  box-sizing: border-box;
}
.box{
  width: 95%;
  height: 292rpx;
  background: #ffffff;
  margin: 0 auto;
}
.title{
  width: 100%;
  height: 146rpx;
  line-height: 146rpx;
  text-align: center;
  color: #4A4A4A;
  font-size: 36rpx;
}
.phone{
  font-size: 50rpx;
  color: #E51337;
}
.input-box{
  width: 95%;
  height: 140rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.code-input{
  width: 76rpx;
  height: 100rpx;
  border-bottom:2px solid #4A4A4A; 
  text-align: center;
}
.btn{
  width: 95%;
  height: 90rpx;
  background: #E51337;
  border-radius:10rpx;
  font-size: 32rpx;
  color: #ffffff; 
}
.time{
  width: 95%;
  height: 140rpx;
  text-align: center;
  line-height: 100rpx;
  font-weight: 26rpx;
  color: #4A4A4A;
}
.ipt{
  width: 0;
  height: 0;
}




