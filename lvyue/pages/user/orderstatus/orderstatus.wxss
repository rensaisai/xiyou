@import "/pages/user/orddetail/orddetail.wxss";
.index{
  width: 100%;
  height: auto;
  padding: 2rpx 0 112rpx;
  box-sizing: border-box;
}
.titles{
  width: 100%;
  height: 85rpx;
  background: #ffffff;
  padding: 0 20rpx;
  box-sizing: border-box;
  line-height: 85rpx;
  font-size: 32rpx;
  color: #383838;
  font-weight: 600;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.travel-information{
  width: 100%;
  height: 138rpx;
  background: #ffffff;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-top: 2rpx;
}
.travel-box{
  width: 100%;
  height:69rpx;
  line-height: 69rpx;
  font-size: 26rpx;
  color: #383838; 
}
.text{
  margin-left: 20rpx;
}
.information-box{
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  background: #ffffff;
}
.information{
  margin-left: 10rpx;
}
.describe{
  width: 100%;
  font-size: 26rpx;
  color: #9B9A9B;
  line-height: 40rpx;
  padding: 10rpx 15rpx 20rpx;
  box-sizing: border-box;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  word-wrap:break-word; 
  word-break:normal;
}
.personal-box{
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  background: #ffffff;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.personal-information{
  width: 100%;
  height:80rpx;
  background: #ffffff;
  display: flex; 
}
.name{
  width: 25%;
  height: 80rpx;
  font-size: 26rpx;
  color: #9B9A9B;
  line-height: 80rpx;
}
.order-price{
  width: 100%;
  height: 354rpx;
  background: #ffffff;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-top:20rpx; 
}