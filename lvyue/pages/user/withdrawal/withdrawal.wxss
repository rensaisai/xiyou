.price-box{
  width: 100%;
  height: 186rpx;
  background: #ffffff;
  margin-top: 2rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.price{
  width: auto;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.amount{
  font-size: 48rpx;
  color: #e51337;
  font-weight: 700;
  line-height: 48rpx;
}
.amount-text{
  font-size: 24rpx;
  color: #575757;
  line-height: 24rpx;
  font-weight: 600;
}
.input-box{
  width: 100%;
  height: 94rpx;
  background: #ffffff;
  margin-top: 2rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
}
.left{
  width: 150rpx;
  height: 94rpx;
  font-size: 28rpx;
  color: #b9b9b9;
  line-height: 94rpx;
  font-weight: 600;
}
.right{
  flex-grow: 1;
  height: 94rpx;
  font-size: 28rpx;
  line-height: 94rpx;
  font-weight: 600;
}
.btn{
  width: 95%;
  height: 100rpx;
  background: #ff2237;
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  margin-top: 52rpx;
  line-height: 100rpx;
  text-align: center;
}
button::after{
  border: none;
}