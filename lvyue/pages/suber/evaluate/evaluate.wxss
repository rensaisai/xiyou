
page{
  widows: 100%;
  height: 100%;
  background: #ffffff;
}
.star-level-box{
  width: 100%;
  height: 104rpx;
  border-top: 1rpx solid #E7E7E7;
  border-bottom: 1rpx solid #E7E7E7;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.goods-img-box{
  width: 66rpx;
  height: 66rpx;
}
.star-level-describe{
  font-size: 30rpx;
  margin-left: 20rpx;
}
.star-level{
  width: 320rpx;
  height: 104rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-left:20rpx; 
}
.star-img{
  width: 44rpx;
  height: 42rpx;
}
.state-box{
  font-size: 30rpx;
  color: #919191;
  margin-left:20rpx; 
}
.text-box{
  width: 100%;
  min-height: 300rpx;
  max-height: auto;
  padding: 20rpx;
  box-sizing: border-box;
  background: #ffffff;
}
.text{
  width: 100%;
  min-height: 380rpx;
  max-height: auto;
  font-size: 30rpx;
}
.img-box{
  width: 100%;
  height: 300rpx;
  padding: 20rpx;
  box-sizing: border-box;
  display: inline-block;
  background: hsl(0, 0%, 100%);
}
.issue-img-boxs{
  width: 160rpx;
  height: 300rpx;
  display: inline-block;
  margin-right: 30rpx;
}
.issue-img{
  width: 160rpx;
  height: 160rpx;
  border-radius:5rpx; 
}
.detile{
  width: 160rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #949494;
}
.issue{
  position: fixed;
  bottom: 20rpx;
  left: 5%;
  width: 90%;
  height: 90rpx;
  background: #ea294b;
  color: #ffffff;
}
button[disabled] {
    color: #fff !important;
    background: #ea294b !important;
}