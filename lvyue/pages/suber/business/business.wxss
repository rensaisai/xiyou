.commodity_screen{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
.commodity_attr_box {
  width: 542rpx;
  height: 456rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  margin-top:-228rpx;
  margin-left:-271rpx;  
  z-index: 2000;
  background: #ffffff;
  border-radius:8px; 
}
.hidden-box{
  width: 100%;
  height: 64rpx;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.hidden-btn{
  width: 32rpx;
  height: 32rpx;
}
.validation{
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
  text-align: center;
  line-height: 32rpx;
}
.prompt{
  font-size:28rpx;
  color: #333333;
  text-align: center;
  line-height: 28rpx;
  margin-top: 43rpx; 
}
.graphics{
  width: 100%;
  height: 70rpx;
  padding: 0 52rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  margin-top: 35rpx;
}
.graphics-left{
  width: 210rpx;
  height: 70rpx;
  background: #eeeeee;
}
.graphics-right{
  width: 182rpx;
  height: 70rpx;
  font-size: 26rpx;
  color: #223FDD;
  font-weight: 600;
  text-align: center;
  line-height: 70rpx;
}
.input-box{
  width: 100%;
  height: 90rpx;
  padding: 0 52rpx;
  box-sizing: border-box;
  margin-top: 37rpx;
  display: flex;
  justify-content: space-between;
}
.input{
  width: 278rpx;
  height: 90rpx;
  background:#F3F4F6;
  border-radius:10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 30rpx; 
}
.btn{
  width: 144rpx;
  height: 90rpx;
  background: #E32236;
  border-radius:10rpx;
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 600;
  text-align: center;
  line-height: 90rpx; 
}
.tetle{
  width: 100%;
  height: 128rpx;
  font-size: 32rpx;
  color: #232323;
  text-align: center;
  line-height: 128rpx;
  font-weight: 700;
}
.describe{
  width: 100%;
  height: auto;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #232323;
}
.img-box{
  width: 100%;
  height: 634rpx;
  padding: 34rpx 58rpx;
  box-sizing: border-box;
}
.img{
  width: 100%;
  height: 100%;
  /* background: #E32236; */
}
.text{
  width: 100%;
  height: auto;
  font-size: 22rpx;
  color: #7F7F7F;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.index{
  display: none;
}