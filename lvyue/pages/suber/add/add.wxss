/* @import "/pages/user/myorder/myorder"; */
.index{
  width: 100%;
  height: auto;
}
.tab-nav{
  width: 100%;
  height: 90rpx;
  background: #ffffff;
}
.text{
  width:50%;
  height:88rpx;
  font-size:34rpx;
  color:#232323;
  line-height:70rpx;
  text-align:center;
  border-bottom:2rpx solid #ffffff;
  display: inline-block;
}
.selects{
  border-bottom:2rpx solid #E31436;
}
.tab{
  width: 18%;
}
.list-box{
  width: 100%;
  height: 232rpx;
  background: #ffffff;
  border-radius: 30rpx;
  margin-top: 20rpx;
  padding: 35rpx 28rpx;
  box-sizing: border-box;
}
.order-box{
  width: 100%;
  height: 162rpx;
  display: flex;
  align-items: center; 
}
.order-right-box{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.price{
  font-size: 30rpx;
  color: #ED052B;
}
.img{
  width: 162rpx;
  height: 162rpx;
  border-radius:20rpx; 
}
.order-right-box{
  flex: 1; 
  height: 162rpx;
  font-size: 30rpx;
  color: #1C1C1C;
  padding-left:30rpx;
  box-sizing: border-box; 
}
.search-box{
  position: relative;
  width: 100%;
  height: 92rpx;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.btn-text{
  color: #CECECE;
  font-size: 30rpx;
}
.btn-sech{
  color: #ED052B;
  font-size: 30rpx;
}
.search-input{
  width: 80%;
  height: 64rpx;
  background: #EFF1F4;
  border-radius:32rpx; 
  font-size: 28rpx;
  color: #999999;
  padding: 0 20rpx 0 60rpx;
  box-sizing: border-box;
}
.search-icon{
  position: absolute;
  left:40rpx;
  width: 24rpx;
  height: 24rpx;
}
.index-box{
  width: 100%;
  height: auto;
  padding: 20rpx 20rpx 0;
  box-sizing: border-box;
}
.shops-name{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.red-text{
  background:#f1f1f3!important; 
}