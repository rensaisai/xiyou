.index{
  width: 100%;
  height: 100%;
  background: #ffffff;
  display: flex;
  flex-direction: column;
}
.seek-box{
  width: 100%;
  height: 150rpx;
  background: #E41342;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 20rpx 0;
  box-sizing: border-box;
}
.seek-input{
  position: relative;
  width: 630rpx;
  height: 64rpx;
  background: #ffffff;
  border-radius:32rpx; 
  padding: 0 20rpx 0 60rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.seek-image{
  position: absolute;
  top: 40rpx;
  left: 40rpx;
  width: 24rpx;
  height: 24rpx;
  z-index: 999;
}
.seek-btn{
  height: 64rpx;
  line-height: 64rpx;
  font-size: 30rpx;
  color: #ffffff;
}
.box{
  flex: 1;
  width: 100%;
  margin-top: -40rpx;
  background: #ffffff;
  border-radius:35rpx 35rpx 0 0; 
  padding:  0 20rpx;
  box-sizing: border-box;
}
.history-record-box{
  width: 100%;
  height: auto;
}
.history-record-title{
  width: 100%;
  height: 150rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.title{
  font-size: 30rpx;
  color: #2B2B2B;
  font-weight: 600;
}
.detail-img{
  width: 30rpx;
  height: 30rpx;
}
.record-list-box{
  width: 100%;
  height: auto;
 
}
.list-box{
  width: auto;
  height: 64rpx;
  padding: 0 25rpx;
  background: #F5F5F5;
  border-radius:32rpx; 
  font-size: 26rpx;
  color: #4A4A4A;
  line-height: 64rpx;
  display: inline-block;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}